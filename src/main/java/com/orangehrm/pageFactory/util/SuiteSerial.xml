<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Simple Smoke Test Suite" verbose="1" parallel="none">
	<listeners>
		<listener class-name="com.orangehrm.report.custReportListener"/>
		<listener class-name="com.orangehrm.report.testListener"/>
		<listener class-name="com.orangehrm.report.reportListener"/>
		<listener class-name="org.testng.reporters.EmailableReporter"/>
	</listeners>
	<test name="Simple Smoke Test serial execution" >
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangehrm.orangeHRMLoginTest" />
			<class name="com.orangehrm.orangeHRMLoginWithDtPrverTest" />
			<class name="com.orangehrm.orangeHRMLoginWithExclDaPrverTest" />
			<class name="com.misc.misctest.sampleTest"/>
		</classes>
	</test>
</suite>
